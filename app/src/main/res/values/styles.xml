<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/koho_regular</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/koho_regular</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout
        </item>  <!--Sdk 28-->
        <!--<item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item> Sdk 27-->
    </style>

    <style name="AppTheme.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/koho_regular</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout
        </item>  <!--Sdk 28-->
        <!--<item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item> Sdk 27-->

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/koho_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">// zmiana rozmiaru czcionki po rotacji ekranu
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/koho_regular</item>
    </style>

    <style name="AppTheme.NoActionBar2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="splash_screen_theme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>

</resources>
